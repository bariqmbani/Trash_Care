<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/card_notif">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/done_outline_24px_outlined"

            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="10dp" />

        <TextView
            android:id="@+id/headNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sampah Anda telah diambil"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="-7dp" />

        <TextView
            android:id="@+id/waktuNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="waktu"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/headNotif"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="66dp" />

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>