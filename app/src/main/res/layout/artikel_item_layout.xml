<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="16dp"
    android:layout_marginBottom="12dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    app:cardBackgroundColor="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivArtikel"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="#ffff"
            android:text="Technopreneur 2019"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ini buat judull artikelnya"
            android:layout_toRightOf="@id/ivArtikel"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:id="@+id/tvJudul"/>

        <TextView
            android:id="@+id/tvJenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ini jenis arikel"
            android:layout_below="@id/ivArtikel"
            android:layout_margin="8dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>